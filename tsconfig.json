{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src/",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["data"]
}
